{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./web",
    "baseUrl": "./",
    "paths": {
      "ojs/*": ["node_modules/@oracle/oraclejet/dist/types/*"],
      "ojL10n": ["node_modules/@oracle/oraclejet/dist/types/ojL10n"],
      "text": ["node_modules/@oracle/oraclejet/dist/types/text"],
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@oracle/oraclejet/types"
    ]
  },
  "include": ["src/**/*", "src/custom.d.ts"],
  "exclude": ["node_modules", "web"]
}
